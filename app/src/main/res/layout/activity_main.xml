<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/R"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/text_res"
        android:layout_width="180pt"
        android:layout_height="40pt"
        android:text=""
        android:textSize="30pt"/>

    <LinearLayout
        android:layout_width="180pt"
        android:layout_height="40pt"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn1"
            android:layout_width="45pt"
            android:layout_height="40pt"
            android:text="1"
            android:textSize="20pt"/>
        <Button
            android:id="@+id/btn2"
            android:layout_width="45pt"
            android:layout_height="40pt"
            android:text="2"
            android:textSize="20pt"/>
        <Button
            android:id="@+id/btn3"
            android:layout_width="45pt"
            android:layout_height="40pt"
            android:text="3"
            android:textSize="20pt"/>
        <Button
            android:id="@+id/btn_db"
            android:layout_width="45pt"
            android:layout_height="40pt"
            android:text="*"
            android:textSize="20pt"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="180pt"
        android:layout_height="40pt"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn4"
            android:layout_width="45pt"
            android:layout_height="40pt"
            android:text="4"
            android:textSize="20pt"/>
        <Button
            android:id="@+id/btn5"
            android:layout_width="45pt"
            android:layout_height="40pt"
            android:text="5"
            android:textSize="20pt"/>
        <Button
            android:id="@+id/btn6"
            android:layout_width="45pt"
            android:layout_height="40pt"
            android:text="6"
            android:textSize="20pt"/>
        <Button
            android:id="@+id/btn_div"
            android:layout_width="45pt"
            android:layout_height="40pt"
            android:text="/"
            android:textSize="20pt"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="180pt"
        android:layout_height="40pt"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn7"
            android:layout_width="45pt"
            android:layout_height="40pt"
            android:text="7"
            android:textSize="20pt"/>
        <Button
            android:id="@+id/btn8"
            android:layout_width="45pt"
            android:layout_height="40pt"
            android:text="8"
            android:textSize="20pt"/>
        <Button
            android:id="@+id/btn9"
            android:layout_width="45pt"
            android:layout_height="40pt"
            android:text="9"
            android:textSize="20pt"/>
        <Button
            android:id="@+id/btn_m"
            android:layout_width="45pt"
            android:layout_height="40pt"
            android:text="-"
            android:textSize="20pt"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="180pt"
        android:layout_height="40pt"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_plus"
            android:layout_width="45pt"
            android:layout_height="40pt"
            android:text="+"
            android:textSize="20pt"/>
        <Button
            android:id="@+id/btn0"
            android:layout_width="45pt"
            android:layout_height="40pt"
            android:text="0"
            android:textSize="20pt"/>
        <Button
            android:id="@+id/btn_c"
            android:layout_width="45pt"
            android:layout_height="40pt"

        android:text="c"
        android:textSize="20pt"/>
        <Button
            android:id="@+id/btn_res"
            android:layout_width="45pt"
            android:layout_height="40pt"
            android:text="="
            android:textSize="20pt"/>
    </LinearLayout>

</LinearLayout>